<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/relative_layout_bottom_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/blue">

        <RelativeLayout
            android:id="@+id/bottom_relative_press"
            android:layout_width="match_parent"
            android:layout_height="@dimen/relative_layout_bottom_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent">
        <LinearLayout
            android:id="@+id/header_linear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/elight"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="@string/elight"
            android:textSize="@dimen/room_text_size"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/roman"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="-0"
            android:text="Roman"
            android:textSize="@dimen/room_text_size"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/aPlat"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/room_text_size"
            android:text="A Plat"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/total"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/room_text_size"
            android:text="Total"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_marginLeft="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/header_linear2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/header_linear1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/elight_value"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="elight"
                android:textColor="@color/white"
                android:textSize="@dimen/room_text_size"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/roman_value"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="roman"
                android:textColor="@color/white"
                android:textSize="@dimen/room_text_size"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/aPlat_value"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="a plot"
                android:textColor="@color/white"
                android:textSize="@dimen/room_text_size"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/total_value"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="1223"
                android:textColor="@color/white"
                android:textSize="@dimen/room_text_size"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

            <ImageButton
                android:id="@+id/addButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/button_background_shape"
                android:src="@drawable/ic_add_white_24dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/edit_relative_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/lenear1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp">

                <EditText
                    android:id="@+id/editElight"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:hint="Elight"
                    android:textSize="15sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_horizontal"/>

                <EditText
                    android:id="@+id/editRoman"
                    android:layout_width="115dp"
                    android:layout_height="50dp"
                    android:layout_weight="-1"
                    android:hint="Roman"
                    android:textSize="15sp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_horizontal"/>

                <EditText
                    android:id="@+id/editAplot"
                    android:layout_width="115dp"
                    android:layout_height="50dp"
                    android:layout_weight="-1"
                    android:hint="A Plot"
                    android:textSize="15sp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lenear2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/lenear1"
                android:layout_margin="5dp">

                <Button
                    android:id="@+id/update"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="Update"
                    android:textAllCaps="false"
                    android:layout_weight="-1"
                    android:layout_marginLeft="25dp"/>

                <Button
                    android:id="@+id/cancelButton"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:layout_weight="-1"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>


        </RelativeLayout>
    </RelativeLayout>

    </RelativeLayout>

