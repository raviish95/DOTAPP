<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bgone">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup"
            android:textColor="@color/fab2_color"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_above="@+id/userId"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:id="@+id/centre_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:layout_margin="13dp">

            <EditText
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:hint="@string/userid"
                android:paddingLeft="10dp"
                android:textSize="15sp"
                android:inputType="text"
                android:layout_above="@+id/customerContact"
                android:layout_marginBottom="20dp"
                android:drawableRight="@drawable/ic_person_outline_black_24dp"
                android:background="@drawable/signin_sinup_button_shape"
                android:padding="5dp" />

            <EditText
                android:id="@+id/customerContact"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:hint="@string/userContact"
                android:paddingLeft="10dp"
                android:textSize="15sp"
                android:inputType="text"
                android:layout_above="@+id/addreSS"
                android:layout_marginBottom="20dp"
                android:drawableRight="@drawable/ic_phone_android_black_24dp"
                android:background="@drawable/signin_sinup_button_shape"
                android:padding="5dp" />

            <EditText
                android:id="@+id/addreSS"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textSize="15sp"
                android:layout_marginBottom="20dp"
                android:drawableRight="@drawable/ic_lock_outline_black_24dp"
                android:background="@drawable/signin_sinup_button_shape"
                android:padding="5dp" />

            <EditText
                android:id="@+id/interiorName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textSize="15sp"
                android:layout_below="@+id/addreSS"
                android:drawableRight="@drawable/ic_lock_outline_black_24dp"
                android:background="@drawable/signin_sinup_button_shape"
                android:padding="5dp"/>

            <Button
                android:id="@+id/signupButton"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="@string/signup"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="19sp"
                android:background="@drawable/relative_layout_shape"
                android:layout_below="@+id/interiorName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/loginHere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bottom"
                android:textSize="13sp"
                android:textColor="@color/fab2_color"
                android:gravity="center_horizontal"
                android:layout_below="@+id/signupButton"
                android:layout_marginTop="15dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>