            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/orderCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/customercardView"
            android:layout_marginTop="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:id="@+id/dateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <EditText
                        android:id="@+id/orderDatePicker"
                        android:layout_width="140dp"
                        android:layout_height="30dp"
                        android:hint="Date"
                        android:textSize="14sp"
                        android:background="@drawable/edit_view_shape"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"/>

                    <EditText
                        android:id="@+id/amountValue"
                        android:layout_width="140dp"
                        android:layout_height="30dp"
                        android:hint="Amount"
                        android:text="0.0"
                        android:textSize="14sp"
                        android:background="@drawable/edit_view_shape"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/buttonHallCardView"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:layout_below="@+id/orderCardView">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <LinearLayout
                    android:id="@+id/buttonHallLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="15dp">

                    <Button
                        android:id="@+id/addOrder"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Add Order"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:layout_margin="10dp"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:background="@drawable/add_cancel_button_shape"/>
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/listHallCardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/buttonHallCardView"
            >
            <RelativeLayout
                android:id="@+id/rlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp">
                <LinearLayout
                    android:id="@+id/l"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="15dp">

                <Button
                        android:id="@+id/addRoom"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/add_cancel_button_shape"
                        android:text="Add Room"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:visibility="gone"
                        android:layout_alignParentRight="true"
                        android:layout_margin="5dp" />
                </LinearLayout>
                <ListView
                    android:id="@+id/hallList"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@id/l"
                    >

                </ListView>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

</android.support.constraint.ConstraintLayout>